<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN"
        "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en" lang="en">
  <head>
    <meta http-equiv="content-type" content="text/html; charset=utf-8" />
    <title>JsDoc Reference - Index</title>
    <meta name="generator" content="JsDoc Toolkit" />
    <link rel="stylesheet" href="assets/default.css" />
  </head>

  <body>
    <div id="header">
      <form action="./search" method="POST">
        <input type="text" name="search" /><input type="submit" name="action" value="Search" />
      </form>
    </div>


    <div id="index">
      <div align="center"><a href="./">Class Index</a></div>
      <hr />
      <h2>Classes</h2>
      <ul class="classList">
      <%
        var cursor = db.doc.html.find().sort({name:1});

        cursor.forEach( function(blob) {
            var name = blob.name;

           %>
           <div>
             <h2><a href="<%= name %>"><%= name %></a></h2>
           </div>
           <%
        });
      %>
      </ul>
      <hr />

    </div>


    <div id="content">

<%
 var url = request.getURI();
 var classname = url.substring(url.lastIndexOf("/"));

if (classname == "/") {
    renderIndex();
}
else if (request.action == "Search") {
    renderSearch();
}
else {
    renderBody(classname);
}
%>

    </div>
    <div class="fineprint" style="clear:both">

      Documentation (c) 2008 10gen Inc.    </div>
  </body>
</html>

<%
function renderBody(classname) {
    if (classname != null) {
        classname = classname.substring(1);
    }
%>
     <h1 class="classTitle">Class Information</h1>

  <%
  var blob = db.doc.html.findOne({name:classname});

  if(blob == null) {
    %>
    Classname <%= classname %> not Found
    <%
   }
   else {
   %>
      <div>
      <%= blob.content %>
      </div>
  <%
  }
  %>
<%
}
%>


<%
function renderIndex() {
%>
     <h1 class="classTitle">Class Index</h1>

  <%
  var cursor = db.doc.html.find().sort({name:1});
  cursor.forEach( function(blob) {
  %>
      <div>
        <h2><a href="<%= blob.name %>"><%= blob.name %></a></h2>
      </div>
  <%
  });
  %>
<%
}

function renderSearch() {
%>
                  <h1>Search</h1>
                  <%
                     var q = new RegExp(request.search, "i");
                     var cursor = db.doc.find({"name": q});
                     %>
                  <h2><%= cursor.count() %> Results</h2>
                     <%
                     while(cursor.hasNext()) {
                         var obj = cursor.next();
                             %>
                             <div class="searchresult"><a href="<%= obj.name %>"><%= obj.name %></a></div>
                             <%
                     }

}
%>
